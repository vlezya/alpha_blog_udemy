<h1 class='text-center mt-4'>Create a new category</h1>

<div class='container'>
  <div class='row justify-content-center'>
    <div class='col-10'>
      <%= render 'shared/errors', object: @category %>
      <%= form_with(model: @category, class: 'shadow p-3 mb-3 bg-info rounded') do |f| %>
        <div class='form-group row'>
          <%= f.label :name, 'Category name', class: 'col-2 col-form-label text-light' %>
          <div class='col-10'>
            <%= f.text_field :name, class: 'form-control shadow rounded', placeholder: 'Enter your name' %>
          </div>
        </div>
        <div class='form-group text-center mt-3'>
          <%= f.submit class: 'btn btn-outline-light btn-lg' %>
        </div>
      <% end %>
    </div>
    <%= link_to '[ Cancel and return to articles listing ]', articles_path, class: 'text-info text-center' %>
  </div>
</div>
